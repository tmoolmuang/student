<div>
  <h3>All Records</h3>
  <table class="table table-condensed table-hover">
    <tr>
      <th>id</th>
      <th>Student</th>
      <th>Course</th>
      <th>Note</th>
      <th>&nbsp;</th>
    </tr>
    <% @student_courses.each do |sc| %>
    <tr>
      <td><%= sc.id %></td>
      <td><%= sc.student.name  %></td>
      <td><%= sc.course.name %></td>
      <td><%= sc.note %></td>
      <td>
        <%= link_to("Delete", [sc.student, sc], method: :delete, data: { confirm: 'Are you sure you want to delete this record?' }) %>
      </td>
    </tr>
    <% end %>
  </table>
</div>