<div>
  <%= link_to("<< Back to Student", student_path(@student_course.student)) %>
  <div>
    <h3>Add New Course for <%= @student_course.student.name %></h3>
    <%= form_for [@student_course.student, @student_course] do |f| %>
      <table class="table table-condensed">
        <tr>
        	<th>Course</th>
        	<td> <%= f.select :course_id, options_for_select(@courses.collect { |c| [c.name, c.id] }), :include_blank => " -- select -- " %></td>
          <th>Note</th>
          <td class="form-edit"><%= f.text_field(:note) %></td>
        </tr>
      </table>
      <%= f.submit "Add Course", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>