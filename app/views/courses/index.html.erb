<div>
  <h3>Courses</h3>
  <%= link_to("Add a New Course", new_course_path) %>
  <table class="table table-condensed table-hover">
    <tr>
      <th>id</th>
      <th>Name</th>
      <th>Description</th>
      <th>&nbsp;</th>
    </tr>
    <% @courses.each do |c| %>
    <tr>
      <td><%= c.id %></td>
      <td><%= c.name %></td>
      <td><%= c.description %></td>
      <td>
        <%= link_to("Show", course_path(c)) %>
        <%= link_to("Edit",  edit_course_path(c)) %>
        <%= link_to("Delete", c, method: :delete, data: { confirm: 'Are you sure you want to delete this course?' }) %>
      </td>
    </tr>
    <% end %>
  </table>
  <h4>Total count: <%= @courses.count %></h4>
</div>